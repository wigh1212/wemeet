<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="org.zerock.mapper.ChatMapper">




<select id="getlist" resultType="org.zerock.domain.ChatVO" >
	<![CDATA[
		select * from chat where rownum < 7
	]]>
</select>

<insert id="insert">
  INSERT INTO chat (cno,ccategory,ccontent,cregdate,ctitle)
VALUES (cno_sequence.nextval,#{ccategory},#{ccontent},sysdate,#{ctitle});
</insert>

<select id="get" resultType="org.zerock.domain.ChatVO" >
   select * from chat where cno=#{cno}
</select>

<delete id="delete">
   delete from chat where cno=#{cno}
</delete>

<update id="update">
   update chat
   set ccategory=#{ccategory},
   ccontent=#{ccontent},
   ctitle=#{ctitle},
   where cno=#{cno}
</update>

</mapper>